{
  "compilerOptions": {
    "target": "es5", // Using "es5" for broader browser compatibility
    "lib": ["dom", "dom.iterable", "esnext", "es2019"], // Merged lib settings
    "allowJs": true, // Allowing JavaScript files
    "skipLibCheck": true, // Skipping library type checks
    "esModuleInterop": true, // Supporting interop with CommonJS modules
    "allowSyntheticDefaultImports": true, // Enabling default imports
    "strict": true, // Enabling strict type-checking
    "forceConsistentCasingInFileNames": true, // Ensuring consistent casing
    "noFallthroughCasesInSwitch": true, // Enabling error for fallthrough cases
    "module": "esnext", // Use "esnext" for module support
    "moduleResolution": "node", // Resolving modules using Node.js resolution strategy
    "resolveJsonModule": true, // Allowing JSON imports
    "isolatedModules": true, // Ensuring each file is compiled independently
    "noEmit": true, // Disabling file emission for TypeScript compilation
    "jsx": "react-jsx", // Using the JSX support for React
    "rootDir": "./", // Root directory for files
    "outDir": "./dist" // Output directory for transpiled files
  },
  "include": ["src"], // Including the "src" folder
  "typeRoots": ["./node_modules/@types"], // Specifying type roots
  "types": ["mocha", "chai"], // Including types for Mocha and Chai
  "skipLibCheck": true // Retained for skipping type checking on libraries
}